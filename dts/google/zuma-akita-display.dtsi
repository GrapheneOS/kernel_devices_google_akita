#include <dt-bindings/gpio/gpio.h>

&dsim_modes {
	dsim-modes {
		1080x2400 {
			mode-name = "1080x2400";
			pmsk = <
				0x2 0x87 0x2 0x1755 /* p m s k */
				>;
			hs-clk = <830>;
			esc-clk = <20>;
		};
		1344x2992 {
			mode-name = "1344x2992";
			pmsk = <
				0x2 0xDB 0x2 0x1355 /* p m s k */
				>;
			hs-clk = <1346>;
			esc-clk = <20>;
		};
	};
};

&drmdsim0 {
	#address-cells = <1>;
	#size-cells = <0>;

	google_bigsurf: panel@0 {
		compatible = "google,bigsurf";
		label = "google-bigsurf";
		channel = <0>;

		/* reset, power */
		reset-gpios = <&gpa6 0 GPIO_ACTIVE_HIGH>;
		vci-supply = <&m_ldo14_reg>;
		vddi-supply = <&s_bucka_reg>;
		vddd-supply = <&m_ldo22_reg>;
	};
	panel@1 {
		compatible = "samsung,emul";
		label = "samsung-emul";
		channel = <0>;

		/* reset, power */
		reset-gpios = <&gpa6 0 GPIO_ACTIVE_HIGH>;
	};

	google_shoreline: panel@2 {
		compatible = "google,shoreline";
		label = "google-shoreline";
		channel = <0>;
		//touch = <&spitouch>;

		/* reset, power */
		reset-gpios = <&gpa6 0 GPIO_ACTIVE_HIGH>;
		vci-supply = <&m_ldo14_reg>;
		vddi-supply = <&s_bucka_reg>;
		vddd-supply = <&m_ldo22_reg>;
	};
};

&drmdsim1 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "disabled";

	panel@0 {
		compatible = "samsung,s6e3hc3-c10";
		label = "sdc-s6e3hc3-c10";
		channel = <0>;

		/* reset, power */
		reset-gpios = <&gpp10 0 GPIO_ACTIVE_HIGH>;
		vci-supply = <&s_ldo8_reg>;
		vddi-supply = <&s_ldo29_reg>;
	};
	panel@1 {
		compatible = "samsung,emul";
		label = "samsung-emul";
		channel = <0>;

		/* reset, power */
		reset-gpios = <&gpp10 0 GPIO_ACTIVE_HIGH>;
	};
};

&m_ldo14_reg {
	/delete-property/ regulator-always-on;
};

&m_ldo22_reg {
	/delete-property/ regulator-always-on;
};
