#include <dt-bindings/gpio/gpio.h>

&dsim_modes {
	dsim-modes {
		1080x2400 {
			mode-name = "1080x2400";
			pmsk = <
				0x2 0xB3 0x2 0x5CAB /* p m s k */
				>;
			hs-clk = <1102>;
			esc-clk = <20>;
		};
	};
};

&drmdsim0 {
	#address-cells = <1>;
	#size-cells = <0>;

	google_ak3a: panel@0 {
		compatible = "google,ak3a";
		label = "google-ak3a";
		touch = <&spitouch>;
		channel = <0>;

		/* reset, power */
		reset-gpios = <&gpa6 0 GPIO_ACTIVE_HIGH>;
		vci-supply = <&m_ldo14_reg>;
		vddi-supply = <&s_bucka_reg>;
		vddd-supply = <&m_ldo22_reg>;
	};

	google_ak3b: panel@1 {
		compatible = "google,ak3b";
		label = "google-ak3b";
		touch = <&spitouch>;
		channel = <0>;

		/* reset, power */
		reset-gpios = <&gpa6 0 GPIO_ACTIVE_HIGH>;
		vci-supply = <&m_ldo14_reg>;
		vddi-supply = <&s_bucka_reg>;
		vddd-supply = <&m_ldo22_reg>;
	};

	panel@2 {
		compatible = "samsung,emul";
		label = "samsung-emul";
		channel = <0>;

		/* reset, power */
		reset-gpios = <&gpa6 0 GPIO_ACTIVE_HIGH>;
	};
};

&drmdsim1 {
	status = "disabled";
};

&drmdp {
	status = "okay";
};

&drmdecon1 {
	status = "okay";
	connector = <0x10>;
};

&m_ldo14_reg {
	/delete-property/ regulator-always-on;
};

&m_ldo22_reg {
	/delete-property/ regulator-always-on;
};
